# Organizer Onboarding Environment Configuration
# Copy this to your .env file and update with your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ticketmax

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Email Configuration (for organizer notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="TicketVerse <noreply@ticketverse.com>"

# File Upload Configuration
UPLOAD_DIR=./uploads/documents
MAX_FILE_SIZE=5242880
API_URL=http://localhost:3000

# Frontend URLs (for email links)
FRONTEND_URL=http://localhost:3000

# Encryption Configuration (for sensitive data like banking info)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Admin Configuration
ADMIN_EMAIL=admin@ticketverse.com

# Payment Processing (for future integration)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# AWS S3 Configuration (for production file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ticketverse-documents

# Verification Settings
VERIFICATION_REVIEW_DAYS=3
AUTO_APPROVE_INDIVIDUALS=false
REQUIRE_MANUAL_BANKING_VERIFICATION=true
